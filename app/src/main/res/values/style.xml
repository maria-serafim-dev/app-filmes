<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/vermelho</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">2dp</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>


    <style name="Widget.App.Button.Black" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.Facebook" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">24dp</item>
        <item name="android:elevation">5dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Login</item>
    </style>

    <style name="ShapeAppearance.App.Login" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TextAppearance.App.Titulo.Globo" parent= "TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:text">@string/text_conta_globo</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="TextAppearance.App.Subtitulo.Globo" parent= "TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/cinza_letras</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>