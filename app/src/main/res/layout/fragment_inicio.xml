<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InicioFragment">

    <TextView
        android:id="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nome_empresa"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view"
            app:layout_constraintBottom_toBottomOf="@id/scroll1"
            app:layout_constraintEnd_toEndOf="@id/scroll1"
            app:layout_constraintStart_toStartOf="@id/scroll1"
            app:layout_constraintTop_toBottomOf="@id/scroll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#252424">

            <TextView
                android:id="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintVertical_bias="0.018"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/text_novidades"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                app:layout_constraintVertical_bias="0.048"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/imageView"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView2"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />

                    <ImageView
                        android:id="@+id/imageView3"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView4"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />

                    <ImageView
                        android:id="@+id/imageView5"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView6"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView3"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/scroll"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/text_sucesso"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll2"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/textView3"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        app:srcCompat="@drawable/magico_oz"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:contentDescription="@string/dc_magico_oz" />

                    <ImageView
                        android:id="@+id/imageView8"
                        app:srcCompat="@drawable/to_rica"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_to_rica" />

                    <ImageView
                        android:id="@+id/imageView9"
                        app:srcCompat="@drawable/magico_oz"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_magico_oz" />

                    <ImageView
                        android:id="@+id/imageView10"
                        app:srcCompat="@drawable/to_rica"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_to_rica" />

                    <ImageView
                        android:id="@+id/imageView11"
                        app:srcCompat="@drawable/magico_oz"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_magico_oz" />

                    <ImageView
                        android:id="@+id/imageView12"
                        app:srcCompat="@drawable/to_rica"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_to_rica" />
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/textView4"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/scroll2"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/text_exclusivos"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scroll3"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/imageView13"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView14"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />

                    <ImageView
                        android:id="@+id/imageView15"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView16"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />

                    <ImageView
                        android:id="@+id/imageView17"
                        app:srcCompat="@drawable/encanto"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/dc_encanto" />

                    <ImageView
                        android:id="@+id/imageView18"
                        app:srcCompat="@drawable/uncharted"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/dc_uncharted" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>