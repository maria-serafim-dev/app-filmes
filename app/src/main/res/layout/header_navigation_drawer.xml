<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/vermelho">

    <ImageView
        android:id="@+id/img_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_usuario"/>

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:layout_gravity="center"
        tools:text="Maria"/>

    <Button
        android:id="@+id/tv_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/text_entrar"
        style="@style/Widget.Material3.Button.TextButton"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:layout_gravity="center"
        tools:text="maria@gmail.com"/>

    <Button
        android:id="@+id/btn_modo_infantil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/Widget.Material3.Button.TextButton"
        android:text="@string/text_entrar_no_modo_infantil"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_mais_planos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        style="@style/Widget.Material3.Button"
        android:text="@string/text_btn_conheca_mais_planos"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_seja_assinante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        style="@style/Widget.Material3.Button.TextButton"
        android:text="@string/text_btn_seja_assinante"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_assinante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"
        app:dividerColor="@color/white"
        />

    <Button
        android:id="@+id/tv_assinante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.TextButton"
        android:text="@string/text_btn_assinante"
        android:textAllCaps="true"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:layout_gravity="center"/>
</LinearLayout>
