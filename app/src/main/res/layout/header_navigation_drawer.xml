<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/vermelho">

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Entrar"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody2"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btn_modo_infantil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Entrar no modo infantil"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_mais_planos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:paddingHorizontal="24dp"
        style="@style/Widget.MaterialComponents.Button"
        android:text="ConheÃ§a mais planos"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_seja_assinante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:paddingHorizontal="24dp"
        style="@style/Widget.MaterialComponents.Button"
        android:text="Seja assinante"
        android:backgroundTint="@color/vermelho"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_assinante"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_assinante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody2"
        android:text="Assinante"
        android:textAllCaps="true"
        android:layout_gravity="center"/>



</LinearLayout>
